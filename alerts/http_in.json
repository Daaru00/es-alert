{
    "name": "HTTP packets in > 10M",
    "frequency": "10s",
    "search": {
        "index": "packetbeat-*",
        "body": {
            "query": {
                "filtered" : {
                    "query" : {
                        "term" : { "type" : "http" }
                    },
                    "filter" : {
                        "and" : [
                            {
                                "range" : {"@timestamp" : {"gte" : "now-10s"}}
                            },
                            {
                                "range" : {"bytes_in" : {"gte" : 100}}
                            }
                        ]
                    }
                }

            }
        }
    },
    "select": "beat.hostname,path,client_ip",
    "transports": ["log"],
    "noRealert": "10m"
}
